<div class="cover mb-4 d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=750&q=80') %>)">

  <div class="text-center text-white">
    <h1 class="mb-5 font-family: 'Merriweather', serif; ">Save your movies</h1>
    <h3 class="typed-js"></h3>
  </div>
</div>

<div class="container py-5 background">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">- My Lists -</h3>
    <%= link_to new_list_path, class: 'btn btn-outline-light' do %>
      <i class='fas fa-plus'> <span class="ml-1">Create a movie list</span></i>
    <% end %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
        <% if list.photo.attached? %>
          <div class="card-category mb-4 " data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>'); border-radius: 10px; ;box-shadow: 0px 0px 14px grey;">
            <%= list.name %>
            <% else %>
              <div class="card-category mb-4" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1580852300584-70e7b758608b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80') ; border-radius: 10px; ;box-shadow: 0px 0px 14px grey;">
            <%= list.name %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
